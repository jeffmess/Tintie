
<div class="row">
	<label title="radio-button">Task Type</label>
	<ul class="radio-list">
		<li>
			<%= radio_button_tag :type, "GeneralTask" %> <%= label_tag(:type, "General") %>
		</li>
		<li>
			<%= radio_button_tag :type, "MaintenanceTask" %> <%= label_tag(:type, "Maintenance") %>
		</li>
	</ul>
</div>

<div class="row">
	<label for="date">Due Date</label>
	<div class="datepicker">
		<div class="text">
			<%= f.text_field :due_date, :class => 'datepicker-input', :id => 'date' %>
		</div>
	</div>
</div>

<div class="row">
	<label for="text-input-1">Task Title</label>
	<div class="text">
		<div class="bg">
			<%= f.text_field :title, :id => "text-input-1" %>
		</div>
	</div>
	<em class="form-note"></em>
</div>

<div class="box">
	<label for="wysiwyg-textarea">Additional Details of Task</label>
	<%= f.text_area :description, :class => "wysiwyg", :id => "wysiwyg-textarea", :cols => "20", :rows => "10" %>
</div>
